{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "types": [
      "mocha"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
